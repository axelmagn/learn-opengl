{
  "version": 3,
  "cmakeMinimumRequired": { "major": 3, "minor": 21 },
  "configurePresets": [
    {
      "name": "msvc-x64",
      "displayName": "MSVC x64 (vcpkg)",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "binaryDir": "${sourceDir}/build/msvc-x64",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "D:/opt/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "ninja-clang-linux",
      "displayName": "Linux Clang + Ninja (vcpkg)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "/opt/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    }
  ],
  "buildPresets": [
    { "name": "msvc-x64-Debug", "configurePreset": "msvc-x64", "configuration": "Debug" },
    { "name": "msvc-x64-Release", "configurePreset": "msvc-x64", "configuration": "Release" },
    { "name": "linux-Debug", "configurePreset": "ninja-clang-linux", "configuration": "Debug" }
  ]
}

