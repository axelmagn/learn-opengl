{
  "version": 5,
  "cmakeMinimumRequired": { "major": 3, "minor": 21 },
  "configurePresets": [
    {
      "name": "windows-clang-ninja",
      "displayName": "Windows: clang-cl + Ninja (vcpkg)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/win-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "D:/opt/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl"
      }
    },
    {
      "name": "linux-clang-ninja",
      "displayName": "Linux: clang + Ninja (vcpkg)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "/opt/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    }
  ],
  "buildPresets": [
    { "name": "win-Debug",   "configurePreset": "windows-clang-ninja", "configuration": "Debug" },
    { "name": "win-Release", "configurePreset": "windows-clang-ninja", "configuration": "Release" },
    { "name": "lin-Debug",   "configurePreset": "linux-clang-ninja",   "configuration": "Debug" },
    { "name": "lin-Release", "configurePreset": "linux-clang-ninja",   "configuration": "Release" }
  ]
}

